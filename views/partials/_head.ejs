<head>
  <!-- 1‑byte first, always -->
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/img/logo.svg" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- ✨ Dynamic SEO -->
  <title><%= title %> · Trajecta — Map Smart · Move Fast</title>
  <meta name="description"
        content="<%= metaDescription || 'Trajecta is the global hub where Olympiad medalists, founders and researchers share their real trajectories so you can build yours faster.' %>" />

  <!-- Canonical + hreflang scaffold -->
  <link rel="canonical" href="<%= canonical || ('https://trajecta.org' + (url || '')) %>" />
  <link rel="alternate" href="https://trajecta.org<%= url || '' %>" hreflang="x-default" />

  <!-- Open Graph / Twitter -->
  <meta property="og:site_name" content="Trajecta" />
  <meta property="og:type"       content="website" />
  <meta property="og:title"      content="<%= ogTitle || title + ' · Trajecta' %>" />
  <meta property="og:description"content="<%= metaDescription || 'Trajecta is the global hub where Olympiad medalists, founders and researchers share their real trajectories so you can build yours faster.' %>" />
  <meta property="og:url"        content="https://trajecta.org<%= url || '' %>" />
  <meta property="og:image"      content="<%= ogImage || 'https://trajecta.org/img/og-default.jpg' %>" />
  <meta name="twitter:card"      content="summary_large_image" />
  <meta name="twitter:site"      content="@TrajectaOrg" />

  <!-- Theme / colors -->
  <meta name="theme-color" content="#111827" />

  <!-- Preconnects & preloads -->
  <link rel="preconnect" href="https://cdn.jsdelivr.net" />
  <link rel="preload"    href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />

  <!-- CSS: one critical file → rest deferred -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://unpkg.com/phosphor-icons@2.0.3/src/css/phosphor.css" rel="stylesheet" />
  <link href="/css/util.css?v=1"  rel="stylesheet" />
  <link href="/css/styles.css?v=1" rel="stylesheet" />

  <!-- Structured‑data for org -->
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"Organization",
    "name":"Trajecta",
    "url":"https://trajecta.org",
    "logo":"https://trajecta.org/img/logo.svg",
    "sameAs":["https://x.com/TrajectaOrg","https://github.com/Trajecta-Org"]
  }
  </script>
</head>
