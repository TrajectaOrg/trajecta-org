<head>
  <!-- 1‑byte first, always -->
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/img/logo.svg" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

  <!-- ✨ Dynamic SEO -->
  <title><%= title %> · Trajecta — World's #1 Talent Trajectory Platform</title>
  <meta name="description"
        content="<%= metaDescription || 'Trajecta maps how top achievers—Olympiad medalists, founders, researchers—move from early success to global impact. Join 1M+ future leaders.' %>" />

  <!-- Canonical + hreflang scaffold -->
  <link rel="canonical" href="<%= canonical || ('https://trajecta.org' + (url || '')) %>" />
  <link rel="alternate" href="https://trajecta.org<%= url || '' %>" hreflang="x-default" />

  <!-- Open Graph / Twitter -->
  <meta property="og:site_name" content="Trajecta" />
  <meta property="og:type"       content="website" />
  <meta property="og:title"      content="<%= ogTitle || title + ' · Trajecta' %>" />
  <meta property="og:description"content="<%= metaDescription || 'Trajecta maps how top achievers—Olympiad medalists, founders, researchers—move from early success to global impact. Join 1M+ future leaders.' %>" />
  <meta property="og:url"        content="https://trajecta.org<%= url || '' %>" />
  <meta property="og:image"      content="<%= ogImage || 'https://trajecta.org/img/og-default.jpg' %>" />
  <meta name="twitter:card"      content="summary_large_image" />
  <meta name="twitter:site"      content="@TrajectaOrg" />

  <!-- Theme / colors -->
  <meta name="theme-color" content="#0A0B0D" />
  <meta name="msapplication-TileColor" content="#FFBB00" />

  <!-- Preconnects & DNS Prefetch -->
  <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="dns-prefetch" href="https://unpkg.com" />
  
  <!-- Modern Font Loading -->
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" as="style" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />

  <!-- CSS: Critical styles first -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web@2.1.2/src/regular/style.css" rel="stylesheet" />
  <link href="/css/modern.css?v=2" rel="stylesheet" />
  <link href="/css/util.css?v=2"  rel="stylesheet" />
  <link href="/css/styles.css?v=2" rel="stylesheet" />

  <!-- PWA Support -->
  <link rel="manifest" href="/manifest.json" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

  <!-- Structured‑data for org -->
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"Organization",
    "name":"Trajecta",
    "url":"https://trajecta.org",
    "logo":"https://trajecta.org/img/logo.svg",
    "description":"World's #1 platform mapping talent trajectories from early success to global impact",
    "sameAs":["https://x.com/TrajectaOrg","https://github.com/Trajecta-Org","https://youtube.com/@TrajectaOrg"],
    "foundingDate":"2025",
    "founders":[{"@type":"Person","name":"Trajecta Team"}]
  }
  </script>
</head>
