<% layout("layout") -%>

<header class="mb-4 d-flex justify-content-between align-items-center">
  <h1 class="h2 fw-bold"><i class="ph-microphone me-1"></i>Trajecta Talks</h1>
  <a href="/talks/submit" class="btn btn-outline-primary btn-sm"><i class="ph-plus me-1"></i>Suggest a guest</a>
</header>

<div class="row g-4">
  <% talks.forEach(t=>{ %>
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-sm hover-lift">
      <div class="ratio ratio-16x9">
        <iframe src="<%= t.video_url %>" allowfullscreen></iframe>
      </div>
      <div class="card-body">
        <h5 class="fw-semibold"><%= t.title %></h5>
        <p class="small text-muted mb-0"><i class="ph-calendar me-1"></i><%= t.published_at.toISOString().slice(0,10) %></p>
      </div>
    </div>
  </div>
  <% }) %>
</div>
